-- Force Accept Button
local ForceButton = Instance.new("TextButton")
ForceButton.Name = "ForceButton"
ForceButton.Size = UDim2.new(0, 140, 0, 50)
ForceButton.Position = UDim2.new(0.5, 10, 0, 140)
ForceButton.BackgroundColor3 = Color3.fromRGB(205, 33, 33)
ForceButton.BorderSizePixel = 0
ForceButton.Text = "FORCE ACCEPT"
ForceButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ForceButton.TextSize = 14
ForceButton.Font = Enum.Font.GothamBold

-- Assemble UI
TitleBar.Parent = MainFrame
TitleLabel.Parent = TitleBar
CloseButton.Parent = TitleBar
InputFrame.Parent = MainFrame
InputBox.Parent = InputFrame
FreezeButton.Parent = MainFrame
ForceButton.Parent = MainFrame
MainFrame.Parent = ScreenGui
ScreenGui.Parent = PlayerGui

-- Button Functions
local function FreezeTrade(username)
	if username == "" then
		username = InputBox.PlaceholderText
	end

	print("Freezing trade for: " .. username)
end

local function ForceAccept(username)
	if username == "" then
		username = InputBox.PlaceholderText
	end

	print("Forcing accept for: " .. username)
end

-- Connect Events
FreezeButton.MouseButton1Click:Connect(function()
	FreezeTrade(InputBox.Text)
end)

ForceButton.MouseButton1Click:Connect(function()
	ForceAccept(InputBox.Text)
end)

CloseButton.MouseButton1Click:Connect(function()
	ScreenGui:Destroy()
end)

-- Add hover effects
local function AddButtonEffect(button)
	local originalColor = button.BackgroundColor3

	button.MouseEnter:Connect(function()
		button.BackgroundColor3 = originalColor:Lerp(Color3.fromRGB(255, 255, 255), 0.2)
	end)

	button.MouseLeave:Connect(function()
		button.BackgroundColor3 = originalColor
	end)

	button.MouseButton1Down:Connect(function()
		button.BackgroundColor3 = originalColor:Lerp(Color3.fromRGB(0, 0, 0), 0.3)
	end)

	button.MouseButton1Up:Connect(function()
		button.BackgroundColor3 = originalColor:Lerp(Color3.fromRGB(255, 255, 255), 0.2)
	end)
end

AddButtonEffect(FreezeButton)
AddButtonEffect(ForceButton)
AddButtonEffect(CloseButton)
